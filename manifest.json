{
  "manifest_version": 2,
  "name": "backnote",
  "description": "Copying text snippets made easy. Select text and hover over a backnote tab to paste it.",
  "version": "1.0",
  "homepage_url": "https://github.com/polevoyd/backnote-ext",

  "applications": 
  {
    "gecko": 
    {
      "id": "dmitry.polevoy@yahoo.com",
      "strict_min_version": "60.0b5"
    }
  },

  "icons": 
  {
    "16": "images/icon16.png",
    "48": "images/icon.png"
  },

  "browser_action": 
  {
    "default_icon": 
    {
      "48": "images/icon.png"
    },
    "default_title": "Backnote"
  },

  "background": 
  {
    "scripts": ["background.js", "edit-note.js"]
  },

  "commands": 
  {
    "backnote": 
    {
      "suggested_key": { "default": "Ctrl+Shift+V" },
      "description": "Sending request to open a backnote tab"
    }
  },

  "options_ui": 
  {
    "page": "options.html",
    "browser_style": true
  },

  "content_scripts": 
  [{
    "matches": ["*://*/*"],
    "js": ["content-script.js"]
  }],
  
  "permissions": 
  [
    "tabs",
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "<all_urls>",
    "storage",
    "downloads"
  ]
}

